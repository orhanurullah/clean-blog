<%- include('partials/_header.ejs') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation.ejs') -%>
 
  <!-- Page Header -->
  <header class="masthead mt-4" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container pt-4">
      <div class="row pt-4">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Update The Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" class="form-group">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input type="text" class="form-control" 
              name="title" value="<%= post.title %>" placeholder="Write the post title" id="title" required data-validation-required-message="Please enter post title">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Detail</label>
              <textarea rows="5" class="form-control" placeholder="Write the post detail" id="detail"
              name="detail" required data-validation-required-message="Please enter the post detail."><%= post.detail %></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Update Post</button>
        </form>
      </div>
    </div>
  </div>

  <hr>

  <%- include('partials/_footer.ejs') -%>

</body>

</html>
